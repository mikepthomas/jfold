<project name="${project.name}"
         xmlns="http://maven.apache.org/DECORATION/1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">
    <body>
        <breadcrumbs>
            <item name="${project.name}" href="${project.url}"/>
        </breadcrumbs>

        <links>
            <item name="Google Code" href="http://jfold.googlecode.com/"/>
        </links>

        <menu ref="parent" />
        <menu ref="reports" />

        <menu name="Languages">
            <item name="In Deutsch" href="${project.url}/de/index.html" />
            <item name="En Français" href="${project.url}/fr/index.html" />
            <item name="På Svenska" href="${project.url}/sv/index.html" />
        </menu>
    </body>

    <publishDate position="right"/>
    <version position="right"/>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>

    <custom>
        <fluidoSkin>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>

            <leftColumnClass>span3</leftColumnClass>
            <bodyColumnClass>span9</bodyColumnClass>

            <navBarStyle>navbar-inverse</navBarStyle>

            <sideBarEnabled>true</sideBarEnabled>
            <topBarEnabled>true</topBarEnabled>
            <topBarIcon>
                <name>${project.name}</name>
                <href>${project.url}</href>
            </topBarIcon>
        </fluidoSkin>
    </custom>
</project>
